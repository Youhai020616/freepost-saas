{
  "name": "freepost-saas",
  "version": "0.1.0",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "bash scripts/dev.sh",
    "dev:direct": "pnpm --parallel --filter @freepost/api --filter @freepost/web dev",
    "dev:web": "pnpm --filter @freepost/web dev",
    "dev:api": "pnpm --filter @freepost/api dev",
    "dev:clean": "bash scripts/cleanup-ports.sh && pnpm dev",
    "cleanup": "bash scripts/cleanup-ports.sh",
    "test:api": "bash scripts/test-api.sh",
    "start": "pnpm -r start",
    "lint": "pnpm -r lint"
  }
}
