{
  "name": "freepost-saas",
  "version": "0.1.0",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "build": "./build.sh",
    "dev": "pnpm --parallel --filter @freepost/api --filter @freepost/web dev",
    "start": "pnpm --filter @freepost/web start",
    "lint": "pnpm -r lint",
    "prisma:generate": "pnpm --filter @freepost/db prisma:generate || echo 'Prisma generation failed, continuing...'",
    "prisma:migrate": "pnpm -r prisma:migrate",
    "prisma:deploy": "pnpm --filter @freepost/db prisma:migrate:deploy"
  }
}
